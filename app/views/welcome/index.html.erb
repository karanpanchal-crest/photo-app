<% if current_user %>
  <h2 align="center">Welcome, <%= current_user.email %></h2>
<% else %>
  <div class="jumbotron">
    <h2>Photo Management App</h2>
    <p class="lead">
      You'll love managing your Photos with this application. Sign up!
    </p>
  </div>
  
  <div class="row">
    <div class="plans clearfix">

      <div class="col-lg-4 col-lg-offset-2 plan" style="font-size:20px;">
        <h2>Premium Plan</h2>
        <div class="price pull-right">
	  Price: $10
	</div>
	<div class="features">
	  <ul>
	    <li>Unlimited Image Uploads</li>
	    <li>Responsive Design</li>
	    <li>Access Anywhere</li>
	  </ul>
	</div>
	<p>
	  <%= link_to 'Sign Up', new_user_registration_path, class:"btn btn-lg btn-primary sign-up" %>
	</p>
      </div>

      <div class="col-lg-4 col-lg-offset-0 plan" style="font-size:20px;">
        <h2>Amaze Plan</h2>
	<div class="price pull-right">
	  Price: $20
 	</div>
	<div class="features">
	  <ul>
	    <li>Unlimited Image Uploads</li>
	    <li>Responsive design</li>
	    <li>Access Anywhere</li>
	    <li class="extra">Unlimited Projects</li>
	  </ul>
	</div>
	<p>
	  <%= link_to 'Sign Up', new_user_registration_path, class:"btn btn-lg btn-primary sign-up" %>
	</p>
      </div>
    </div>
  </div>
<% end %>
